<br/>
<div class="container col-lg-4 col-lg-offset-4" style="max-width: 400px;" id="registerUser">
  <a href="/login" class="fa fa-sign-in fa-2x" title="Login"></a>
  <img src="./images/logo.png" class="img-responsive center-block" />
  <form class="form-horizontal" action='/processRegUser'  method="POST" id="reg-form">
      <h3 class="form-signin-heading">Register</h3>
      
        
        <!-- Username -->
        <label class="control-label" for="username">Username</label>
        <input type="text" id="username" name="username" class="form-control" placeholder="Username" required autofocus>
        <p class="help-block" id="count">Username can contain any letters or numbers, without spaces</p>
       
     
        <!-- E-mail -->
        <label class="control-label" for="email">Email</label>
  
          <input type="email" id="email" name="email1" placeholder="" class="form-control" required autofocus>
          <p class="help-block" id="email-validate">Please provide your E-mail</p>

          <input type="email" id="email-confirm" name="email" placeholder="" class="form-control" required autofocus>
          <p class="help-block" id="warning">Confirm your E-mail</p>
          
      
        <!-- Password-->
        <label class="control-label" for="password">Password</label>

          <input type="password" id="password" name="password" placeholder="" class="form-control" required autofocus>
          <p class="help-block" id="pass-warning">Password should be at least 4 characters</p>
      
      
        <!-- Button -->
        
          <button id="reg-btn" class="btn btn-lg btn-success btn-block">Register</button>
       
    
    </form>
</div> <!-- /container -->



<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script type="text/javascript" src="javascripts/scripts.js"></script>
<script type="text/javascript" src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
<script type="text/javascript">
$( document ).ready(function() {

    $('#email').on('focusout', function() {
      var email = $('#email').val();
        checkEmail();
    });

    $("#reg-form").on('submit', function(e) {
        var email = $("#email").val(),
            confirm = $("#email-confirm").val(),
            password = $('#password').val();
            console.log(password.length);

        if (email!=confirm) {
           $("#warning").text("Sorry, your emails don't match").css("color", "red");
           e.preventDefault(); //form will not be submitted
        }
        if(password.length <4){
          $("#pass-warning").text("Sorry, password needs to more than 4 characters").css("color", "red");
          e.preventDefault(); //form will not be submitted
        }
        else{
          $("#warning").text("Confirm your E-mail").css("color", "#737373");
        }
    });

});


</script>

</body>
</html>