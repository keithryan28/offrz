<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Offrz | Home</title>
  <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1.0">

  <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
  <link rel="stylesheet" type="text/css" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
  <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
  <link href='http://fonts.googleapis.com/css?family=Duru+Sans' rel='stylesheet' type='text/css'>

      <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>


<div class="container col-md-4 col-md-offset-4" id="timeline">


 <% include nav.ejs %>
  <div class="row bgColor">
  
    <% for (var i = 0; i < items.length; i++) { %>
     <!-- first row -->
    <div class="col-xs-8">
      <a href="/busProfileFromUser?busId=<%= items[0].post_created_by_id %>"><h5 class="capitalise"><%= items[0].post_created_by %></h5></a>
    </div>
    <div class="col-xs-4 like-img">
     <!--  <img src="img/like.png"> -->
    </div>

     <!-- second row -->
    <div class="col-xs-12 main-image">
      <img src="<%= items[i].imgpath %>" class="img-responsive center-block" />      
    </div> 


     
        <!-- third row -->
    <div class="side-padding">    
     
      <div class="col-xs-4 save text-center">
        <button class="shareBtn" type="button" value="<%= items[0]._id %>" onclick="save(),incrementViewCount();">SAVE</button>
      </div> 
     

     <div class="col-xs-4 text-center" >
          <a href="http://www.facebook.com/sharer/sharer.php?u=http://www.offrz.com/singlePost?id=<%= items[0]._id %>&title=<%= items[0].title %>" target="_blank" class="shareBtn share-icons"><i class="fa fa-facebook fa-1x"></i></a>

          <a href="http://twitter.com/intent/tweet?status=Check%20out%20the%20latest%20%23Offrz%20of%20 <%= items[0].post_created_by %>+%40 http://www.offrz.com/singlePost?id=<%= items[0]._id %>" target="_blank" class="shareBtn share-icons"><i class="fa fa-twitter fa-1x"></i></a>


          <a href="https://plus.google.com/share?url=http://www.offrz.com/singlePost?id=<%= items[0]._id %>" target="_blank" class="shareBtn share-icons"><i class="fa fa-google fa-1x"></i></a>
      </div> 
      

     <a href="http://www.<%= items[0].link %>" target="_blank">        
      <div class="col-xs-4 buy text-center">
        <input type="hidden" value="<%= items[0]._id %>" name="postId" id="postId">
            <button class="shareBtn" onclick="addClick(),incrementViewCount();" type="button">BUY</button>
      </div> 
     </a>
     
    </div>

    <!-- fourth row -->
    <div class="col-xs-12 main-image">
      <h5 class="capitalise"><%= items[0].title %></h5>     
    </div>

    <!-- fivth row -->
    <div class="col-xs-12 main-image">
      <p><%= items[0].desc %></p>     
    </div>

 
    <div class="col-xs-4 white top text-center">
      <strong>Before</strong>
    </div>

    <div class="col-xs-4 white top text-center">
      <strong>After</strong>
    </div>
    <div class="col-xs-4 white top text-center">
      <strong>Saving</strong>
    </div>
    
    
    <div class="col-xs-4 white text-center">
      <p>€<%= items[0].before %></p>
    </div>

    <div class="col-xs-4 white text-center">
      <p>€<%= items[0].after %></p>
    </div>
    <div class="col-xs-4 white text-center">
      <p><%= items[0].percent %>%</p>
    </div> 

   <% } %>

  </div>
   
</div> <!-- /container -->



<% include footer.ejs %>
<% include logout.ejs %>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script type="text/javascript" src="javascripts/scripts.js"></script>
<script type="text/javascript" src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
</body>
</html>