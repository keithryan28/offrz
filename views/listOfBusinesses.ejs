    <![endif]-->
</head>
<body>
<% include nav.ejs %>
<br/>

<div class="container col-md-4 col-md-offset-4" id="">


 <% for (var i = 0; i < lists.length; i++) { %>
  
   <div class="row listOfOffers" style="">
    <div class="col-xs-4">
      <a href="/busProfileFromUser?busId=<%= lists[i]._id %>">
        <img src="<%= lists[i].imgpath %>" class="img-responsive follow-img"/>
     </a>
    </div>

    <div class="col-xs-4">
      <p class="follow-txt capitalise text-center"><%= lists[i].businessName %><br/><%= lists[i].address %></p>
    </div>

    <div class="col-xs-4">
        <button type="button" value="<%= lists[i]._id %>" class="follow pull-right btn" onclick="follow();">FOLLOW</button>
    </div> 
   </div>

<% } %>

   
</div> <!-- /container -->


<% include footer.ejs %>
<% include logout.ejs %>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script type="text/javascript" src="javascripts/scripts.js"></script>
<script type="text/javascript" src="javascripts/jquery.js"></script>
<script type="text/javascript" src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>


</body>
</html>