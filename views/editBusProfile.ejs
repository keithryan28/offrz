<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Offrz | Edit Profile</title>
  <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1.0">

  <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
  <link rel="stylesheet" type="text/css" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
  <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
  <link href='http://fonts.googleapis.com/css?family=Duru+Sans' rel='stylesheet' type='text/css'>

      <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>


<div class="container col-md-4 col-md-offset-4" id="editProfile">
   <% include busnav.ejs %>
  <div class="row bgColor">
     <form class="form-horizontal" action='/processEditBusProfile' enctype="multipart/form-data" method="POST">
      <h4 class="form-signin-heading">Edit Your Profile</h4>

       <% for (var i = 0; i < business.length; i++) { %> 

        <label class="control-label">Logo</label>
        <div class="col-xs-12">
        <img src="<%= business[0].imgpath %>" class="img-responsive" style="width:350px;" />
        </div>
        <input type="file" name="theFile"/>
        <!-- Username -->
        <label class="control-label" for="BusinessName">Business Name</label>
        <input type="text" id="businessName" name="businessName" class="form-control" value="<%= business[0].businessName %>" required autofocus>

        <label class="control-label" for="siteUrl">Website URL</label>
        <input type="text" id="url" name="url" class="form-control" value="<%= business[0].homeDomain %>" required autofocus>
        
        <label class="control-label" for="address">Address</label>
        <input type="text" id="address" name="address" class="form-control" value="<%= business[0].address %>" required autofocus>

        <label class="control-label" for="gpslong">Longitutde</label>
        <input type="text" id="gpsLong" name="gpsLong" class="form-control" value="<%= business[0].gpsLong %>" required autofocus>

        <label class="control-label" for="gpslat">Latitutde</label>
        <input type="text" id="gpsLat" name="gpsLat" class="form-control" value="<%= business[0].gpsLat %>" required autofocus>
        
        <label class="control-label" for="email">Email</label>
        <input type="text" id="email" name="email" value="<%= business[0].email %>" class="form-control" required autofocus>
          
        <label class="control-label" for="password">Password</label>
        <input type="text" id="password" name="password" value="<%= business[0].password %>" class="form-control" required autofocus>
        <!-- Button -->
        
          <button class="btn btn-lg btn-success btn-block">UPDATE</button>
       
     <% } %>
    </form>

     <form action="/deletePost" method="POST">
               <input type="hidden" name="busId" value="<%= items[0]._id %>">
                <button class="btn btn-lg btn-danger pull-right">Delete Account</button>
            </form>
  </div>
</div> <!-- /container -->



<% include busFooter.ejs %>
<% include logout.ejs %>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script type="text/javascript" src="javascripts/scripts.js"></script>
<script type="text/javascript" src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
</body>
</html>